<table width= '800' height='800' align='center' border='2' class='chess-board'>

  <% (0..7).each do |row| %>
    <tr>
      <% (0..7).each do |column| %>
        <td width='100' height='100' class ='<%= column.even? ^ row.even? ? "white" : "black" %>'>
          <% if @game.render_piece(column, 7 - row) != nil %>
              <%= image_tag @game.render_piece(column, 7 - row) %>
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
