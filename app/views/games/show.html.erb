<h1 class="sides">Player 2&nbsp;&nbsp;<%= image_tag gravatar_url(@game.player_2.email, 64), alt: "", class: 'gravatars' %></h1>
<div>
  <div class="col-xs-8">
    <table width= '800' height='800' align='center' border='2' class='chess-board'>
      <% (0..7).each do |row| %>
        <tr>
          <% (0..7).each do |column| %>
            <td width='100' height='100' class ='<%= column.even? ^ row.even? ? "white" : "black" %>'>
              <% if @game.render_piece(column, 7 - row) != nil %>
                  <% piece = @game.retrieve_piece(column, 7 - row) %>
                  <%= link_to image_tag(@game.render_piece(column, 7 - row)), piece_path(piece) %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-xs-4">
    <h1>It's Player <%= @game.turn %>'s turn</h1>
    <%= button_to 'Forfeit The Game', { controller: 'games', action: 'forfeit', id: @game.id }, method: :post %>
  </div>
</div>
<br class="clr" />
<h1 class="sides">Player 1&nbsp;&nbsp;<%= image_tag gravatar_url(@game.player_1.email, 64), alt: "", class: 'gravatars' %></h1>
