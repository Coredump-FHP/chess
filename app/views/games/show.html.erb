<table width='800' height='800' align='center' border='2' class='chess-board'>

    <% (0..7).each do |row| %>
        <tr>
            <% (0..7).each do |column| %>
                <% if @game.render_piece(column, 7 - row) != nil %>
                    <td width='100' height='100' class='<%= column.even? ^ row.even? ? "white" : "black" %> droppable' data-x='<%= column %>' data-y='<%= 7 - row %>'>
                        <% piece = @game.retrieve_piece(column, 7 - row) %>
                        <%= image_tag(@game.render_piece(column, 7 - row), class: "draggable", id: "piece-#{piece.id}", data: {x: column, y: 7-row} ) %>
                    </td>
                <% else %>
                    <td width='100' height='100' class='<%= column.even? ^ row.even? ? "white" : "black" %> droppable' data-x='<%= column %>' data-y='<%= 7 - row %>'></td>
                <% end %>
            <% end %>
        </tr>
    <% end %>
</table>

<br /><br />
<div class="container">
  <div class="col-xs-6 col-xs-3 text-center">
    <%= image_tag gravatar_url(@game.player_1.email, 64), alt: "", class: 'gravatars' %>
  </div>
  <div class="col-xs-6 col-xs-3 text-center">
    <%= image_tag gravatar_url(@game.player_2.email, 64), alt: "", class: 'gravatars' %>
  </div>
</div>