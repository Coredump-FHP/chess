<br />
<table width= '800' height='800' align='center' border='2' class='chess-board'>

  <% (0..7).each do |row| %>
    <tr>
      <% (0..7).each do |column| %>
        <td width='100' height='100' class ='<%= column.even? ^ row.even? ? "white" : "black" %>'>
          <% if @game.render_piece(column, 7 - row) != nil %>
              <% piece = @game.retrieve_piece(column, 7 - row) %>
              <%= link_to image_tag(@game.render_piece(column, 7 - row)), piece_path(piece) %>
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<br /><br />
<div class="container">
  <div class="col-xs-6 col-xs-3 text-center">
    <%= image_tag gravatar_url(@game.player_1.email, 64), alt: "", class: 'gravatars' %>
    <h3>Player - <%=@game.player_1_id %></h3>
  </div>
  <div class="col-xs-6 col-xs-3 text-center">
    <%= image_tag gravatar_url(@game.player_2.email, 64), alt: "", class: 'gravatars' %>
    <h3>Player - <%= @game.player_2_id %></h3>
  </div>
</div>
<div class="text-center col-xs-6 col-xs-offset-3">
  <h1>It is Player <%= @game.turn %>'s turn</h1>
</div>
