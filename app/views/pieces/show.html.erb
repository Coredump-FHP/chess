<table width= '800' height='800' align='center' border='2' class='chess-board'>

  <% (0..7).each do |row| %>
    <tr>
      <% (0..7).each do |column| %>
        <td width='100' height='100' class = "droppable" '<%= column.even? ^ row.even? ? "white" : "black" %>' id='<%= @piece.id %> '>
          <%= render_piece_highlight(column, 7 - row) %>
        </td >
      <% end %>
    </tr>
  <% end %>
</table>
