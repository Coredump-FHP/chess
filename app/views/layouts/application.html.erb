<!DOCTYPE html>
<html>
  <head>
    <title>CD Chess</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
<div id="wrap">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Home', root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if player_signed_in? %>
          <li><a class="text-center" href="#games">Join Game</a></li>
          <li><a class="text-center" href="#about">About</a></li>
          <li><a class="text-center" href="#team">The Team</a></li>
          <li><%= link_to 'Sign out', destroy_player_session_path, method: :delete %></li>
        <% else %>
        <li><a class="text-center" href="#games">Join Game</a></li>
        <li><a class="text-center" href="#about">About</a></li>
        <li><a class="text-center" href="#team">The Team</a></li>
        <li><%= link_to 'Register', new_player_registration_path %></li>
        <li><%= link_to 'Sign in', new_player_session_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div>
  <% if notice.present? %>
    <p class="alert alert-info text-center"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger text-center"><%= alert %></p>
  <% end %><!-- /.container-fluid -->
</nav>
    <%= yield %>
</div>
<br class="clr" />

  <div id="footer">
    <div class="container">
      <div class="text-center foot-note">
        <p>CD Chess | 2017</p>
        <div class="text-center">
          <%= link_to 'https://github.com/Coredump-FHP/chess', :target=> "_blank" do %>
          <%= image_tag 'not.png', class: 'icons' %>
          <% end %>
        </div>
      </div>
    </div>
</div>
</body>
</html>
